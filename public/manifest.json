{
    "manifest_version": 3,
    "name": "ApexGrid",
    "version": "1.0.0",
    "description": "Transform your new tab into a beautiful, productive dashboard",
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://api.quotable.io/*",
        "https://api.exchangerate-api.com/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}